{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "scripts/**/*", "eslint.config.js", "build.config.ts", "puppeteer.config.cjs", "index.js", "types/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": { "esm": true }
}
